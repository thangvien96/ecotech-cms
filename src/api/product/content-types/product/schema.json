{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Sản phẩm"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "viewCount": {
      "type": "biginteger"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "product_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    }
  }
}
